{
    "id": "file://pdu/status_update",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "description": "https://discordapp.com/developers/docs/topics/gateway#update-status",
    "type": "object",
    "required": ["since", "game", "status", "afk"],
    "properties": {
        "since": {"oneOf": [
            {"type": "null"},
            {"type": "number", "exclusiveMinimum": 0}
        ]},
        "game": {"oneOf": [
            {"type": "null"},
            {"$ref": "file://object/game"}
        ]},
        "status": {
            "type": "enum",
            "oneOf": ["online", "dnd", "idle", "offline", "invisible"]
        },
        "afk": {"type": "boolean"}
    }
}
